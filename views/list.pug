extends layout
block content
    .container.text-center
        header.card-header
            h4.card-title Registered parents
            b Hello, #{currentUser.firstname}  
        |&nbsp
        div.form-row
            div.col.form-group.col-md-9    
                form.search(action='/register/search')
                    div.form-row
                        div.col-md-8
                            input.form-control(name='club' placeholder="Enter your search term ...")
                        div.col-md-4
                            input.btn.btnSub.btn-block(type="submit")
            div.col.form-group.col-md-3    
                form(method="post" action='/logout')
                    button.btn.btnLogOut.btn-block(type="submit") Log out
        table.table.table-striped.custab
            thead.theadMenu
                tr
                    th ID
                    th Parents name
                    th Child's name
                    th Child's age
                    th Club Chosen
                    th Contact
                    th Baby sitter

                tbody
                    each user in users
                        tr
                            td #{user.parentId}
                            td #{user.parentname}
                            td #{user.childsname}
                            td #{user.childsage}
                            td #{user.club}
                            td #{user.telno}
                            td #{user.babysitter}
                        
                                td 
                                    form(method="post" action='/register/delete')
                                        input(type="hidden", placeholder="", name="id", value=user._id)
                                        button.btn.btn-danger.btn-block(type="submit") Delete
